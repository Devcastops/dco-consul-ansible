node_name = "consul-client-{{ ansible_hostname }}"
datacenter = "dc1"
data_dir   = "{{consul_data_dir}}"
log_level  = "INFO"
connect {
  enabled = true
}
verify_incoming = true
verify_outgoing = true
verify_server_hostname = true
ca_file = "{{consul_tls_dir}}/consul-agent-ca.pem"
cert_file = "{{consul_tls_dir}}/dc1-client-consul-0.pem"
key_file = "{{consul_tls_dir}}/dc1-client-consul-0-key.pem"

auto_config = {
    enabled = true,
    intro_token_file =  "/etc/consul.d/token/jwt",
    server_addresses = [
        "10.2.0.6",
    ]
}