node_name = "consul-server-{{ ansible_hostname }}"
server    = true
bootstrap = true
ui_config {
  enabled = true
}

acl = {
  enabled = true
  default_policy = "deny"
  enable_token_persistence = true
}

datacenter = "dc1"
data_dir   = "{{consul_data_dir}}"
log_level  = "INFO"
ports {
  http = 8500
  https = 8501
}
addresses {
  http = "127.0.0.1"
  https = "0.0.0.0"
}
bind_addr = "{{ inventory_hostname }}"
tls {
  https {
    cert_file = "{{ consul_ext_tls_crt_dest }}"
    key_file = "{{ consul_ext_tls_key_dest }}"
    verify_incoming = false
  }
  internal_rpc {
    verify_server_hostname = true
  }
  defaults {
    verify_incoming = true
    verify_outgoing = true
    ca_file = "{{ consul_tls_dir }}/consul-agent-ca.pem"
    cert_file = "{{ consul_tls_dir }}/dc1-server-consul-0.pem"
    key_file = "{{ consul_tls_dir }}/dc1-server-consul-0-key.pem"
  }
}
connect {
  enabled = true
}
auto_config {
        authorization {
            enabled = true
            static {
                oidc_discovery_url= "https://vault.devcastops.com:8200/v1/identity/oidc/provider/core_consul_auto_config"
                bound_issuer = "https://vault.devcastops.com:8200/v1/identity/oidc/provider/core_consul_auto_config"
                bound_audiences = ["consul-cluster-dc1"]
                claim_mappings = {
                    "/consul/hostname"= "node_name"
                }
                claim_assertions= [
                    "value.node_name == \"${node}\""
                ]
            }
        }
    }